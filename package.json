{
  "name": "typescript-boilerplate",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Boilerplate made for typescript projects (includes Vitest, Prettier, ESLint and Husky)",
  "main": "src/main.js",
  "author": "Bilal Oulahal",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint:dev": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "lint:build": "npm run lint:dev --max-warnings=0",
    "format": "pretty-quick --no-restage",
    "format:staged": "pretty-quick --staged",
    "format:all": "prettier --write .",
    "format-check": "pretty-quick --check",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@types/node": "^22.8.6",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@vitest/coverage-v8": "^2.1.4",
    "@vitest/eslint-plugin": "^1.1.10",
    "eslint": "^9.14.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.12.0",
    "husky": "^9.1.6",
    "jsdom": "^25.0.1",
    "prettier": "^3.3.3",
    "pretty-quick": "^4.0.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.12.2",
    "vite": "^5.4.10",
    "vitest": "^2.1.4"
  }
}
